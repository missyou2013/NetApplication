<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical">
    <!--设置-->
    <include layout="@layout/top_title"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/ip_activity_setting"
                    android:textSize="@dimen/set_fot_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/port_activity_setting"
                    android:textSize="@dimen/set_fot_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ac_setting_et_ip"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@mipmap/et_bg"
                    android:text="192.168.0.188"
                    android:textColor="@color/black"
                    android:textSize="@dimen/set_fot_16" />

                <EditText
                    android:id="@+id/ac_setting_et_port"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="8089"
                    android:textSize="@dimen/set_fot_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/file_ip_activity_setting"
                    android:textSize="@dimen/set_fot_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/port_activity_setting"
                    android:textSize="@dimen/set_fot_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ac_setting_et_ip_file"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@mipmap/et_bg"
                    android:text="192.168.0.188"
                    android:textColor="@color/black"
                    android:textSize="@dimen/set_fot_16" />

                <EditText
                    android:id="@+id/ac_setting_et_port_file"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="8091"
                    android:textSize="@dimen/set_fot_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/ac_setting_et_ip_webservices"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@mipmap/et_bg"
                    android:text="http://192.168.100.26/"
                    android:textColor="@color/black"
                    android:textSize="@dimen/set_fot_16" />

                <EditText
                    android:id="@+id/ac_setting_et_port_webservices"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="pnweb/services/TmriOutNewAccess"
                    android:textColor="@color/black"
                    android:textSize="@dimen/set_fot_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/jiqima_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/ac_setting_et_jiqima"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@mipmap/et_bg"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top"
                    android:text="@string/shouquanma_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/ac_setting_et_shouquanma"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@mipmap/et_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top"
                    android:text="@string/shujuku_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ac_setting_txt_shujuku"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/set_height_30"
                    android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/fou_activity_setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top_5"
                    android:text="@string/jiane_mode_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ac_setting_txt_jiane_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/set_height_30"
                    android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/l_check_mode_wai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top_5"
                    android:text="@string/zhaopianjiashuiyin_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ac_setting_txt_zhaopianshuiyin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/set_height_30"
                    android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/fou_activity_setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top_5"
                    android:text="@string/bianma_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ac_setting_txt_bianma"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/set_height_30"
                    android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/fou_activity_setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top_5"
                    android:text="@string/shijian_xianzhi_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ac_setting_txt_shijian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/set_height_30"
                    android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/fou_activity_setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/set_top_5"
                    android:text="@string/moren_chepai_qianzhui_activity_setting"
                    android:textSize="@dimen/set_fot_16"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ac_setting_txt_chepai_left"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/set_height_30"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/ce_activity_setting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/set_fot_16" />

                    <TextView
                        android:id="@+id/ac_setting_txt_chepai_right"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/set_height_30"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/a_activity_setting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/set_fot_16" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="是否自动刷新"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ac_setting_txt_moren"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="是"
                        android:textColor="@color/blue"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="是否编辑图片"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ac_setting_txt_paizhao"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="否"
                        android:textColor="@color/blue"
                        android:textSize="20sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/ac_set_btn_cancle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/ac_set_view_m"
                        android:layout_toStartOf="@+id/ac_set_view_m"
                        android:background="@drawable/my_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/cancle_activity_setting"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ac_set_view_m"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"></TextView>


                    <Button
                        android:id="@+id/ac_set_btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ac_set_view_m"
                        android:background="@drawable/my_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/save_activity_setting"
                        android:textSize="18sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ac_set_btn_obd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="OBD"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/ac_set_btn_finger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/my_shape"
                        android:gravity="center"
                        android:text="指纹"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/ac_set_btn_qianzi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_shape"
                        android:gravity="center"
                        android:text="签字图片采集"
                        android:textSize="18sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/ac_set_btn_vin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:gravity="center"
                    android:text="VIN"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
